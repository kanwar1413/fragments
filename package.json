{
  "name": "fragments",
  "private": true,
  "version": "0.9.0",
  "description": "Fragments back-end API",
  "scripts": {
    "test:watch": "jest -c jest.config.js --runInBand --watch --",
    "test": "jest -c jest.config.js --runInBand --",
    "coverage": "jest -c jest.config.js --runInBand --coverage",
    "lint": "eslint \"./src/**/*.js\" \"tests/**/*.js\"",
    "start": "node src/index.js",
    "dev": "cross-env LOG_LEVEL=debug nodemon ./src/index.js --watch src",
    "debug": "cross-env LOG_LEVEL=debug nodemon --inspect=0.0.0.0:9229 ./src/index.js --watch src",
    "test:integration": "hurl --test --glob \"tests/integration/**/*.hurl\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kanwar1413/Fragments"
  },
  "author": "KANWAR PREET KAUR",
  "license": "UNLICENSED",
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@orangeopensource/hurl": "^6.1.0",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "3.4.2",
    "supertest": "^7.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.775.0",
    "aws-jwt-verify": "^5.0.0",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "http-auth": "^4.2.0",
    "http-auth-passport": "^1.0.7",
    "passport": "^0.7.0",
    "passport-http-bearer": "^1.0.1",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "stoppable": "^1.1.0"
  }
}
